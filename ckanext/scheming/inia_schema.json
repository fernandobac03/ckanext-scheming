{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about_url": "http://example.com/the-inia-schema",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Título",
      "preset": "title",
      "form_placeholder": "ej. Arboles del sector ..."
    },
    {
      "field_name": "title_translated",
      "preset": "fluent_core_translated",
      "form_placeholder": "eg. Title of the dataset ...",
      "label": {
        "en": "Title",
      }
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. arboles-de-"
    },
    {
      "field_name": "notes",
      "label": "Descripción",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
    {
      "field_name": "author",
      "label": "Autor",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator"
    },
    {
      "field_name": "authors",
      "preset": "repeating_text",
      "label": "Colaboradores",
      "form_blanks": 2
    },
    {
      "field_name": "tematica",
      "label": "Temática",
      "form_placeholder": "Campo o área de investigación"
    },
    {
      "field_name": "license_id",
      "label": "Licencia",
      "form_snippet": "license.html",
      "help_text": "Información adicional sobre licencias se puede encontrar en http://opendefinition.org/"
    },
    {
      "field_name": "dddyp",
      "label": "Declaración de Derechos y Privacidad",
      "form_placeholder": "Declaración de ..."
    },
    {
      "field_name": "licenciaabierta",
      "label": "Licencia Abierta",
      "help_text": "Si o No",
      "help_inline": true,
      "preset": "select",
      "choices": [
         {
           "value": "si",
           "label": "Si"
         }, 
         {
           "value": "no",
           "label": "No"
         }
      ]
    },
    {
      "field_name": "localizables",
      "label": "Localizables",
      "form_placeholder": "..."
    },
    {
      "field_name": "recursosrelacionados",
      "label": "Recursos relacionados",
      "form_placeholder": "..."
    },
    {
      "field_name": "fechacreacion",
      "label": "Fecha de creación",
      "form_placeholder": "Formato: año-mes-día     Ejemplo: 2016-09-25",
      "preset": "date"
    },
    {
      "field_name": "fechamodificacion",
      "label": "Fecha de modificación",
      "form_placeholder": "Formato: año-mes-día     Ejemplo: 2016-09-28",
      "preset": "date"
    },
    {
      "field_name": "informaciongeografica",
      "label": "Información geográfica",
      "form_placeholder": "..."
    },
    {
      "field_name": "idioma",
      "label": "Idioma",
      "help_text": "Idioma del dataset",
      "help_inline": true,
      "preset": "select",
      "choices": [
         {
           "value": "ingles",
           "label": "English/Ingles"
         }, 
         {
           "value": "español",
           "label": "Spanish/Español"
         },
         {
           "value": "otro",
           "label": "Otro"
         }
      ]
    },
    {
      "field_name": "author_email",
      "label": "Correo Electrónico",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:creator",
      "display_snippet": "email.html",
      "display_email_name_field": "author"
    },
    {
      "field_name": "owner_org",
      "label": "Organizacion",
      "preset": "dataset_organization"
    },
    {
      "field_name": "docdelosdatos",
      "label": "Documentación de los datos",
      "form_placeholder": "Documentación..."
    },
    {
      "field_name": "version",
      "label": "Versión",
      "validators": "ignore_missing int_validator",
      "form_placeholder": "eg. 2"
    }

  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "Recurso",
      "preset": "resource_url_upload",
      "form_placeholder": "http://inia.es/datos/arboles.csv",
      "upload_label": "Archivo"
    },
    {
      "field_name": "name",
      "label": "Nombre del Recurso",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "description",
      "label": "Descripción",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Formato",
      "preset": "resource_format_autocomplete"
    },
    {
      "field_name": "Distribuciones",
      "label": "Distribuciones",
      "form_placeholder": "Distribuciones..."
    },
    {
      "field_name": "formatoabierto",
      "label": "Formato Abierto",
      "help_text": "Si o No",
      "help_inline": true,
      "preset": "select",
      "choices": [
         {
           "value": "si",
           "label": "Si"
         }, 
         {
           "value": "no",
           "label": "No"
         }
      ]
    }
  ]
}
